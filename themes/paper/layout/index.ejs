<% page.posts.each(function (item) { %>
<section id="<%= item.layout %>-<%= item.slug %>" style="padding-bottom: 1.5rem;">
    <div id="section-header">
        <a href="<%= item.path %>" class="text-xs"><%= item.date.format(config.date_format) %></a>
        <h1><a href="<%= item.path %>" class="font-bold text-blue-600"><%= item.title %></a></h1>
    </div>
    <div id="section-excerpt" class="text-sm">
        <%if (item.excerpt) { %>
            <%- item.excerpt %>
        <% } else { %>
            <p>Tidak kilasan artikel</p>
        <% } %>
    </div>
    <div id="section-footer">
        <a href="<%= item.path %>" class="text-xs text-blue-600">Baca Selengkapnya</a>
    </div>
</section>
<% }) %>

<nav>
    <% if (page.prev){ %>
        <a href="<%- url_for(page.prev_link) %>"><%= __('prev') %></a>
    <% } %>
    <% if (page.next){ %>
        <a href="<%- url_for(page.next_link) %>"><%= __('next') %></a>
    <% } %>
</nav>