<% page.posts.each(function (item) { %>
<section id="<%= item.layout %>-<%= item.slug %>" class="mb-5 shadow-md px-4 pt-2">
    <div id="section-header">
        <div class="text-sm"><%= item.date.format(config.date_format) %></div>
        <a href="<%= item.path %>" class="font-bold text-blue-600 text-lg"><%= item.title %></a>
    </div>
    <div id="section-excerpt"
        <% if (!item.excerpt) { %> 
            class="bg-gradient-to-b from-black to-transparent bg-clip-text text-transparent"
        <% } %>>
        <%if (item.excerpt) { %>
            <%- item.excerpt %>
        <% } else if (item.content) { %>
            <%- excerpt_gen(item.content, 30) %>
        <% } %>
    </div>
</section>
<% }) %>

<nav>
    <% if (page.prev){ %>
        <a href="<%- url_for(page.prev_link) %>"><%= __('prev') %></a>
    <% } %>
    <% if (page.next){ %>
        <a href="<%- url_for(page.next_link) %>"><%= __('next') %></a>
    <% } %>
</nav>