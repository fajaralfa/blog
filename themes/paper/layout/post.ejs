<header class="text-center">
    <h1 class="uppercase"><%= page.title %></h1>
    <hr>
</header>
<div class="" style="font-size: small;">
<%- date(page.date, 'Do MMMM YYYY') %>
</div>
<p><%- page.content %></p>
<% if (page.prev) { %>
    <div>
        <a href="<%= url_for(page.prev.path) %>">Sebelumnya: <%= page.prev.title %></a>
    </div>
<% } %>
<% if (page.next) { %>
    <div>
        <a href="<%= url_for(page.next.path) %>">Selanjutnya: <%= page.next.title %></a>
    </div>
<% } %>