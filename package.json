{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npm run css:build && hexo generate",
    "clean": "hexo clean",
    "deploy": "hexo deploy",
    "server": "hexo server",
    "css": "bunx tailwindcss -i themes/paper/source/css/_input.css -o themes/paper/source/css/style.css -c themes/paper/tailwind.config.js --watch",
    "css:watch": "bunx tailwindcss -i themes/paper/source/css/_input.css -o themes/paper/source/css/style.css -c themes/paper/tailwind.config.js --watch",
    "css:build": "tailwindcss -i themes/paper/source/css/_input.css -o themes/paper/source/css/style.css -c themes/paper/tailwind.config.js"
  },
  "hexo": {
    "version": "7.2.0"
  },
  "dependencies": {
    "hexo": "^7.0.0",
    "hexo-deployer-git": "^4.0.0",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-category": "^2.0.0",
    "hexo-generator-index": "^4.0.0",
    "hexo-generator-tag": "^2.0.0",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-marked": "^6.0.0",
    "hexo-server": "^3.0.0",
    "hexo-tag-embed": "^1.0.0",
    "tailwindcss": "^3.4.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.13"
  }
}
